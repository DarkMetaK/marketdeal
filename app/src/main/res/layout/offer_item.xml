<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_2"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/offer_item_image"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_empty_image"
                android:padding="1dp"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/offer_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Arroz Prato Fino"
                    android:textColor="@color/gray_12"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/offer_item_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="07/04/2024"
                        android:textColor="@color/gray_9"
                        android:textSize="12sp"
                        android:textStyle="normal"/>

                <TextView
                        android:id="@+id/offer_item_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5kg"
                        android:textColor="@color/gray_9"
                        android:textSize="12sp"
                        android:textStyle="normal"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/offer_item_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Supermercado Kampai"
                    android:textColor="@color/gray_9"
                    android:textSize="12sp"
                    android:textStyle="normal"/>

            <TextView
                    android:id="@+id/offer_item_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:foreground="@drawable/strikethrough"
                    android:text="R$ 36,99"
                    android:textColor="@color/gray_9"
                    android:textSize="12sp"
                    android:textStyle="normal"/>

            <TextView
                    android:id="@+id/offer_item_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 36,99"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>