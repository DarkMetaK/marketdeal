<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MarketDeal"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_2"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar mercado"
            android:textColor="@color/gray_12"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="40dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/market_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="Nome do estabelecimento"
            android:inputType="textCapWords"
            android:textColorHint="@color/gray_7"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cep_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="CEP"
            android:inputType="number"
            android:textColorHint="@color/gray_7"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:maxLength="8"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/number_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="NÃºmero do logradouro"
            android:inputType="number"
            android:textColorHint="@color/gray_7"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:maxLength="4"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/street_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="Rua"
            android:inputType="text"
            android:textColorHint="@color/gray_7"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:enabled="false"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/nbr_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="Bairro"
            android:inputType="text"
            android:textColorHint="@color/gray_7"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:enabled="false"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/city_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="Cidade"
            android:inputType="text"
            android:textColorHint="@color/gray_7"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:enabled="false"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/market_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="Registrar estabelecimento"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</ScrollView>
